.header
  .header__tittle
    =link_to root_path, class:"header__bar--tittle" do
      .headerlogo
        ASOBIBA
      -# =image_tag "headerlogo",class:"headerlogo"
  .header__menu
    - if session[:user_id]
      -if @current_user.image_name?
        = image_tag "#{@current_user.image_name}", class:"user-image"
      -else
        = image_tag "noimage.png", class:"user-image"
      = link_to"#{@current_user.nickname}", "/users/#{@current_user.id}", class:"link", id: "user-name"
      = link_to "投稿する" , "/reviews/new", class:"link"
      = link_to "ログアウト" , "/logout", method: :post,  class:"link"
    - else
      = link_to "ユーザー登録" , "/users/new", class:"link"
      = link_to "ログイン" , "/login", class:"link"
.flash_message
  - if flash[:notice]
    = flash[:notice]